<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcom_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9DADA"
    tools:context=".introduction.WelcomeScreenActivity">

    <TextView
        android:id="@+id/wecome_msg"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:text="Welcome!"
        android:textColor="@android:color/black"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="278dp"
        android:layout_height="332dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/loginlogo" />

    <ProgressBar
        android:id="@+id/welcome_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="@android:integer/config_mediumAnimTime"
        android:secondaryProgressTint="@android:color/background_dark"
        android:indeterminate="true"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:progressTint="#009688"
        android:visibility="visible" />

</FrameLayout>